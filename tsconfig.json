{
	"files": [
		"lib/index.ts"
	],
    "compilerOptions": {
        "types": [
            "@types/jest"
        ],

        "module": "commonjs",
        "target": "es5",

        "sourceMap": true,
        "outDir": "./bin",
        "declaration": true,

        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "allowUnreachableCode": false,
        "forceConsistentCasingInFileNames": true
    }
}

